<%- include("partials/header") %>
<div class="ui text main container ">
    <div class="ui huge header">RESTful Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%blogs.forEach(function(blog){%>
                <div class="item">
                    <div class="image">
                       <img src="<%= blog.image%>"></img> 
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title%></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0,70)%>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui basic small violet button" href="/blogs/<%= blog._id%>">Read More</a>
                        </div>
                    </div> 
                </div>
            <% }) %>
        </div>
    </div>

</div>

<%- include("partials/footer") %>